package pdh.graphics{		import flash.display.Sprite;		public class TileBox extends Sprite	{				private var Pattern	:Class   // bitmapdata		private var sp		:Sprite		private var _w		:Number;		private var _h		:Number;		private var offX	:Number;				function TileBox(_Pattern, w, h, _offX:Number = 0)		{			Pattern = _Pattern			offX = _offX			size(w, h);			this.mouseChildren = false;			this.mouseEnabled = false;		}						private function size(w, h):void 		{			_w = w;			_h = h;			if (sp != null) removeChild(sp);			sp = new Sprite();			sp.graphics.beginBitmapFill(new Pattern(0, 0), null, true, true);			sp.graphics.drawRect(offX, 0, w , h);			sp.x = -offX;			sp.graphics.endFill();			addChild(sp);		}				public override function set width(val:Number):void 		{			size(val, _h)		}				public override function set height(val:Number):void 		{			size(_w, val)		}			}		}