package pdh.graphics{		import flash.display.Sprite;	import flash.geom.Point;		public class Coordinate extends Sprite	{				public static function localToLocal(fr:Sprite, to:Sprite):Point 		{			return to.globalToLocal(fr.localToGlobal(new Point()));		};						public static function getLocalPoint(from:Sprite, to:Sprite, origin:Point):Point 		{			var point:Point  = origin == null ? new Point(0, 0) : origin;			from.localToGlobal(point);			to.globalToLocal(point);			return point;		}							}	}