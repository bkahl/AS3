package pdh.graphics{	import flash.text.TextField;	import flash.display.Sprite;		public class Position	{						public static function centerIn(target:Sprite, container:Sprite, _offx:Number = 0, _offy:Number = 0):void		{			centerHorzIn(target, container, _offx);			centerVertIn(target, container, _offy);		}				public static function centerHorzIn(target:*, container:*, _offx:Number = 0):void 		{			target.x =  Math.round((((container.width + _offx) / 2) - (target.width / 2)) + container.x);		}				public static function centerVertIn(target:*, container:*, _offy:Number = 0):void 		{						target.y =  Math.round((((container.height + _offy) / 2) - (target.height / 2)) + container.y);		}						public static function center(target:Sprite, w:Number,h:Number):void 		{			target.x = Math.round((w/2)-(target.width / 2))			target.y = Math.round( (h/2)-(target.height / 2))		}				public static function centerTextVertIn(target:TextField, container:Sprite, _offy:Number = 0):void 		{						target.y =  Math.round((((container.height + _offy) / 2) - (target.textHeight / 2)) + container.y);		}							}	}