package pdh.ui{	import flash.text.TextFieldAutoSize;	import flash.display.MovieClip;	import flash.text.TextField;		public class SimpleTextBox extends MovieClip	{				public var txt:TextField;				function SimpleTextBox()		{			this.mouseEnabled = false;			this.mouseChildren = false;		}				public function set text(val:String):void 		{			txt.autoSize = TextFieldAutoSize.LEFT;			txt.text = val;		}				public function get textWidth():Number		{			return txt.textWidth;		}				public function get textHeight():Number		{			return txt.textHeight;		}					}					}