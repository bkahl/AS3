/**	*/package pdh.ui{		import flash.text.TextFieldAutoSize;	import flash.text.TextField;		import flash.events.MouseEvent;		import gs.TweenLite;	import gs.easing.*;	import pdh.bitmap.Blur;	import pdh.ui.UIObject;	import flash.display.MovieClip;	import flash.utils.Dictionary;	import flash.filters.BlurFilter;	import flash.events.Event;	import flash.utils.Timer;	import flash.events.TimerEvent;		import pdh.events.ListEvent;			public class TweenList extends UIObject{				public var background_mc		:MovieClip;		private var close_btn			:MovieClip;		private var findDict			:Dictionary		private var tweenSpeed 			:Number = .5		private var colNum				:int = 0				public function TweenList()		{					init();			addListeners();		}						public function addListeners():void		{						this.addEventListener(MouseEvent.CLICK, handleFindClick, false, 0, true);			this.addEventListener(MouseEvent.ROLL_OVER, handleFindOver, false, 0, true);								}						private function init():void 		{						this.trackAsMenu = true;			findDict = new Dictionary();			isVisible = false;			this.visible = false;			background_mc.mouseEnabled = true;			background_mc.height = 1;		}						public function setSize(_w, _h):void 		{			w = _w;			h = _h;			background_mc.width = _w + 40;					}				public function set columns(val:int):void 		{			colNum = val - 1;		}				private function handleClose(e:MouseEvent):void 		{			hide();					}				public override function hide():void 		{			super.hide();						TweenLite.to(this, tweenSpeed, {y:0, onComplete:hideDone, overwrite:1});					}						public override function show():void 		{			super.show();			this.visible = true;			TweenLite.to(this, tweenSpeed, {y:this.height * -1, overwrite:1});		}										private function hideDone():void 		{			this.visible = false;		}						// input array with {index, title}		public function addData(arr:Array):void 		{						// populate find pull out						var bottomY_arr:Array = new Array();			bottomY_arr.length = colNum+1;			for (var i:int = 0; i < colNum+1 ; i++){				bottomY_arr[i] = 0;			}						var spacer:int = 9;			var wSpacer:int = 16;			var total:int = arr.length;			var col:int = 0;			var coltotal:int = colNum + 1			var row:int= 0;			var textwidth:Number = ((w - (wSpacer * coltotal)) / coltotal);			for(i = 0; i < total; i++ )			{				var listitem:TweenItemLink =  new TweenItemLink()				listitem.txt.htmlText = arr[i].title				listitem.txt.width = textwidth;				listitem.setColors(0xffffff, 0xff7e00, 0xff0000, 0xffffff)				listitem.mouseChildren = false;				findDict[listitem] = arr[i];				listitem.x = col * (listitem.txt.width + wSpacer) + spacer;								listitem.y = bottomY_arr[col] + spacer;				bottomY_arr[col] = listitem.y  + listitem.txt.textHeight;								trace("tweenlist ====" + col + " | " + bottomY_arr[col]); 								if (row > Math.ceil(total/coltotal)){					col++					row = 0;				} else {					row++;				}													this.addChild(listitem)							}									trace("tweenlist =================================="); 									this.y = 0//this.height;			background_mc.height = this.height;												if (close_btn != null) {				close_btn.removeEventListener(MouseEvent.CLICK, handleClose);				removeChild(close_btn)			}			var close_btn = new closebutton()			close_btn.addEventListener(MouseEvent.CLICK, handleClose, false, 0, true);			addChild(close_btn)			close_btn.y = 5;			close_btn.x = background_mc.width - (close_btn.width + 5 )												if (background_mc.height > 400){				tweenSpeed = 1;			} else {				tweenSpeed = .5			}					}						private function handleFindClick(e:MouseEvent):void 		{			trace("taraget = " + e.target)			//if (e.target != background_mc || e.target != close_btn){			if (findDict[e.target] != null){				dispatchEvent(new ListEvent(ListEvent.ITEM_CLICK, { index: findDict[e.target].index, title: findDict[e.target].title }))				hide();			}			//}		}				private function handleFindOver(e:MouseEvent):void 		{			trace(this + "roll over")			//e.stopImmediatePropagation();					}					} // end class} // end package