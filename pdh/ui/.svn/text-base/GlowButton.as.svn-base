/**	Glow Button		Code by Paul Hannan*/package pdh.ui{	import flash.display.MovieClip;	import pdh.ui.UIObject;	import flash.events.MouseEvent;		import caurina.transitions.Tweener;		public class GlowButton extends UIObject {				private var _glowSeconds	:Number = 0.5;				public var glow_mc			:MovieClip;				public function GlowButton() {						addListeners();			glow_mc.alpha = 0;					glow_mc.mouseEnabled = false;			glow_mc.mouseChildren = false;			buttonMode = true;		}				private function addListeners():void 		{			this.addEventListener(MouseEvent.MOUSE_DOWN, handleMouseEvent);			this.addEventListener(MouseEvent.MOUSE_UP, handleMouseEvent);			this.addEventListener(MouseEvent.ROLL_OVER, handleMouseEvent);			this.addEventListener(MouseEvent.ROLL_OUT, handleMouseEvent);		}				public function set glowSeconds(v:Number):void{			_glowSeconds = v;		}					private function handleMouseEvent(evt:MouseEvent):void 		{			switch (evt.type) {				case MouseEvent.MOUSE_DOWN:											break ;					case MouseEvent.MOUSE_UP:											break ;					case MouseEvent.ROLL_OVER:						Tweener.addTween(glow_mc, {alpha:1, time:_glowSeconds, transition:"linear"});					break ;					case MouseEvent.ROLL_OUT:						Tweener.addTween(glow_mc, {alpha:0, time:_glowSeconds, transition:"linear"});					break ;					default:					break;			}									}							} // end class} // end package