package pdh.ui{		import flash.display.MovieClip;		public class Background extends MovieClip	{								// Stage Instances:		public var top_mc		:MovieClip;		public var back_mc		:MovieClip;		public var bottom_mc	:MovieClip;								function Background()		{					}				public function setSize(w, h):void 		{						top_mc.x = 0;			top_mc.y = 0;			top_mc.width = w;						back_mc.width = w;			back_mc.height = h;			back_mc.x = 0;			back_mc.y = 0;									bottom_mc.x = 0;			bottom_mc.y = h - bottom_mc.height;			bottom_mc.width = w;					}							}	}