/**	Helper functions for textfields*/package pdh.text{	import flash.text.TextFieldAutoSize;	import flash.text.TextField;		public class TextHelper	{				// aligned to the left		public static function formatLeft(txt:TextField):void		{			txt.autoSize = TextFieldAutoSize.LEFT;		}				// aligned to the left		public static function formatRight(txt:TextField):void		{			txt.autoSize = TextFieldAutoSize.RIGHT;		}						// aligned to the left		public static function formatCenter(txt:TextField):void		{			txt.autoSize = TextFieldAutoSize.CENTER;		}				// aligned to the left		public static function formatHTML(txt:TextField):void		{			txt.autoSize = TextFieldAutoSize.LEFT;			txt.condenseWhite = true;		}						public static function getBottom(txt:TextField):Number		{			return txt.y + txt.textHeight;		}				public static function getRight(txt:TextField):Number		{			return txt.x + txt.textWidth;		}				public static function stackText(arr:Array):void 		{			var total:int = arr.length - 1;			for (var i:int = 0 ; i < total; i++){				placeTextBelow(arr[i + 1].field, arr[i].field, arr[i].space );			}		}				public static function placeTextBelow(textf:TextField , textb:TextField, space:Number):void 		{			textb.autoSize = TextFieldAutoSize.LEFT;			textf.y = Math.round(textb.textHeight + textb.y + space);		}						public static function snapPixel(field:TextField):void 		{					}			}		}