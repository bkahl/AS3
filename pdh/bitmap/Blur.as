package pdh.bitmap{			import flash.filters.BitmapFilterQuality;	import flash.filters.BlurFilter;		import flash.display.DisplayObject;		public class Blur	{					//Method to control blur        public static function blurOn(target:DisplayObject, _x, _y = 0):BlurFilter		{            var blur:BlurFilter = new BlurFilter();            blur.blurX = _x;            blur.blurY = _y;            blur.quality = BitmapFilterQuality.MEDIUM;            target.filters = [blur];						return blur;         }        				        public static function blurOff(target:DisplayObject):void		{            var blur:BlurFilter = new BlurFilter();            blur.blurX = 0;            blur.blurY = 0;            blur.quality = BitmapFilterQuality.MEDIUM;            target.filters = [blur];          }					}}