package pdh.bitmap{	import flash.display.*;		public class BitmapTools	{						public static function createBitmap(original:Sprite):Bitmap 		{			var bitmapData:BitmapData = new BitmapData( original.width , original.height ,true , 0x000000 );			bitmapData.draw( original as IBitmapDrawable );					var bitmap:Bitmap = new Bitmap( bitmapData );					//var returnSprite:Sprite = new Sprite();			//returnSprite.addChild( bitmap as DisplayObject );					return bitmap;		}						public static function getBitmapData(mc:Sprite, _fill:Number = 0x000000):BitmapData		{			//trace(mc)			var mcBMP:BitmapData = new BitmapData(mc.width, mc.height, true, _fill);			//trace(mcBMP)			mcBMP.draw( mc as IBitmapDrawable );			return mcBMP;		}					}		}