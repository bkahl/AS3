package pdh.bitmap{			import flash.filters.BitmapFilterQuality;	import flash.filters.DropShadowFilter;		import flash.display.Sprite;		public class DropShadow	{					//Method to control blur        public static function shadowOn(target:Sprite, _color:Number = 0x000000, _alpha:Number = .5, _distance:Number = 5, _angle:Number = 45,  _x:Number = 4, _y:Number = 4):DropShadowFilter{            var blur:DropShadowFilter = new DropShadowFilter();			blur.color = _color;            blur.blurX = _x;			blur.angle = _angle;			blur.distance = _distance;			blur.alpha = _alpha;            blur.blurY = _y;            blur.quality = BitmapFilterQuality.LOW;            target.filters = [blur];						return blur;         }        		        public static function shadowOff(target:Sprite):void{                        target.filters = null;          }					}}