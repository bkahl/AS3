package pdh.bitmap{		import flash.filters.BitmapFilter;  	import flash.filters.BitmapFilterQuality; 	import flash.filters.BevelFilter	import flash.display.Sprite;		public class Border	{				 private static function getBitmapFilter(color:Number, size:Number, angle:Number):BitmapFilter 		 {              var strength:Number = 2; 		  	 return new BevelFilter(size, angle, color, 1, color, 1, 0, 0, strength )         }  		 		 		 public static function add(target:Sprite, _color:Number, _size:Number):void 		 {						var filter:BitmapFilter = getBitmapFilter(_color, _size, 0)			var filter2:BitmapFilter = getBitmapFilter(_color, _size, 90);  			var myFilters = new Array();  			myFilters.push(filter);			myFilters.push(filter2); 						target.filters = myFilters;			 		 }		 		 public static function remove(targ:Sprite):void 		 {			 targ.filters = null;		 }		 	}			}