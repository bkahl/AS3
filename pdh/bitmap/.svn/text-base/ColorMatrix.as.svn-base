package pdh.bitmap{			import flash.filters.BitmapFilterQuality;	import flash.filters.ConvolutionFilter;	import flash.filters.ColorMatrixFilter;	import flash.display.Sprite;		public class ColorMatrix	{					//Method to control blur        public static function enhance(target:Sprite):ConvolutionFilter		{           			var convolution:ConvolutionFilter;			convolution = new ConvolutionFilter(						3,						3,						[0, -2, 0, 						 -2, 20, -2, 						 0, -2, 0],						10, // divisor						-40, // bias						true,						true,						0x000000,						0);						target.filters = [convolution];			return convolution;         }		 		 						public static function remove(target:Sprite):void 		{			target.filters = [];		}					}}