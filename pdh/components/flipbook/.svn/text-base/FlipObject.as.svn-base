package pdh.components.flipbook{	import flash.geom.Point;	import com.foxaweb.pageflip.PageFlip;	import pdh.bitmap.BitmapTools	import gs.TweenMax;	import gs.easing.*;	import flash.display.*	public class FlipObject extends Sprite	{		var render				:Shape		var page0				:BitmapData;		var page1				:BitmapData;		var w					:Number;		var h					:Number;		var flipPercent			:Number = 0		var maxW				:Number;		var SPEED				:Number = 5;				function FlipObject(side1:BitmapData, side2:BitmapData):void 		{			page0 = side1;			page1 = side2;		}				public function setSize(_w:Number, _h:Number):void 		{			w = _w;			h = _h;			maxW = w * 2		}				public function init():void 		{		 	render = new Shape()			addChild(render)			flipPos = 1		}								private function flipIt(val, val2):void 		{			render.graphics.clear();						var o:Object=PageFlip.computeFlip(	new Point(val,val2),	// flipped point									new Point(1,1),		// of bottom-right corner									w,		// size of the sheet									h,									true,				// in horizontal mode									1);					// sensibility to one 									PageFlip.drawBitmapSheet(o,					// computeflip returned object									render,					// target									page0,		// bitmap page 0									page1);		// bitmap page 1							}								public function set flipPos(val:Number):void 		{			flipPercent = val;						var val1:Number = (val * maxW) - w						var val2:Number = h * val			if (val2 < h /2){				val2 = h * (1-val)			}						flipIt(val1, val2)		}				public function get flipPos():Number 		{			return flipPercent;		}					} // end class	} // end package