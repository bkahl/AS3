package pdh.components.flipbook{			import flash.events.Event;	import flash.events.MouseEvent;	import pdh.util.PhotoViewer;	import pdh.events.PhotoViewerEvent;	import pdh.bitmap.BitmapTools;	import flash.display.*	import gs.TweenMax;	import pdh.graphics.Box;	import pdh.events.FlipBookEvent;	public class Fader extends Sprite	{		private var w		private var h		private var backPhoto	:PhotoViewer;		private var fadePhoto	:PhotoViewer;						function Fader(_dat:Array):void 		{			init(_dat)			addListeners()		}				private function init(_dat:Array):void 		{						// load photos			backPhoto = new PhotoViewer(_dat[0].src)			addChild(backPhoto)			fadePhoto = new PhotoViewer(_dat[1].src)			addChild(fadePhoto)			fadePhoto.alpha = 0;					}				private function addListeners():void 		{			this.addEventListener(MouseEvent.MOUSE_DOWN, handleDown, false, 0, true);			backPhoto.addEventListener(PhotoViewerEvent.LOADED, handleLoaded, false, 0, true)		}				private function handleLoaded(e:PhotoViewerEvent):void 		{			dispatchEvent(new FlipBookEvent(FlipBookEvent.LOADED));		}						private var tracker:int = 0		private function handleDown(e:MouseEvent):void 		{						tracker ++			if (tracker > 1) tracker = 0						if (fadePhoto.alpha == 0){				TweenMax.to(fadePhoto, 1, {alpha:1})			} else {				TweenMax.to(fadePhoto, 1, {alpha:0})			}			dispatchEvent(new FlipBookEvent(FlipBookEvent.FLIPPED, {page:tracker}));							}										public function setSize(_w:Number, _h:Number):void 		{			w = _w			h = _h		}					} // end class	} // end package