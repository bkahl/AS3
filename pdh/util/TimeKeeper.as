package pdh.util{	import flash.display.*;	import flash.events.Event;	import flash.geom.Point;	import flash.utils.Dictionary;	import flash.events.EventDispatcher;	//import flash.utils.Date			public class TimeKeeper extends EventDispatcher	{		private static var instance			:TimeKeeper = new TimeKeeper();				private var c_time					:Number;				public function TimeKeeper()		{			if ( instance ) {				throw new Error("PotionProxy can only be accessed through PotionProxy.getInstance()");			} else {			}		}			public static function getInstance():TimeKeeper		{			return instance;		}				public function setStage(stg:MovieClip):void 		{			stg.addEventListener(Event.ENTER_FRAME, handleFrame)		}						// ------------------------------------------------------------------------------------------handling				private function handleFrame(e:Event):void 		{			c_time = new Date().getTime();		}						public function get time():Number 		{			return c_time;		}							}	}