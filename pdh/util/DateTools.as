package pdh.util{		public class DateTools	{						public static function convertToDecimal(_year:uint, _month:uint, _day:uint):Number 		{						var month:Number;			var year:Number;			var day:Number;						if (_month > 1) {				month = ((_month - 1) * 30) * (1/365);			} else {				month = 0			}									if (_day > 1) {				day = _day * (1/365);			} else {				day = 0;			}						year = _year;			month = month +  day;						year = year + month;						return year;					}								public static function dateToObject(date:String, sep):Object		{						var temp = date.split(sep);						var year = parseInt(temp[0]);			var month = temp[1];			var day = temp[2];						return {year:year, month:month, day:day}		}							} // end class	}  // end package